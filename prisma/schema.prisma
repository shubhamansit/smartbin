generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  salt      String
  bins      Bin[]
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

enum Role {
  USER
  ADMIN
}

model Bin {
  id           String     @id @default(uuid())
  fillLevel    Int
  sensor       String
  site         String
  category     String
  lastReported String
  binOwnerId   String?
  binOwner     User?      @relation(fields: [binOwnerId], references: [id])
  activity     Activity[]
  createdAt    DateTime   @default(now()) @db.Timestamptz(3)
  updatedAt    DateTime   @updatedAt @db.Timestamptz(3)
}

model Activity {
  id        String   @id @default(uuid())
  binId     String
  fillLevel Int
  bin       Bin      @relation(fields: [binId], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz(3)
}
