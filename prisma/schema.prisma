generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  salt     String
  bins     Bin[]
  role     Role   @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Bin {
  id           String  @id @default(uuid())
  fillLevel    Int
  sensor       String
  site         String
  category     String
  lastReported String
  binOwnerId   String?
  binOwner     User?   @relation(fields: [binOwnerId], references: [id])
}
